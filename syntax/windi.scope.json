{
  "scopeName": "source.windi.scope",
  "injectionSelector": "L:meta.attribute.class, L:meta.property-list.css",
  "patterns": [
    { "include": "#separator" },
    { "include": "#variant" },
		{ "include": "#utility" },
    { "include": "#alias" },
		{ "include": "#important" },
		{ "include": "#bracket" }
  ],
  "repository": {
    "separator":         {
      "match": "(?<=(\\w|-|\\+)+?):",
      "name": "punctuation.separator.key-value.css"
    },
    "variant": {
      "match": "[^:\\s]+(?=:)",
      "name": "entity.name.tag.windi"
    },
		"utility": {
			"match": "(\\w|-|\\.)+?",
			"name": "variable.utility.windicss"
		},
		"important": {
			"match": "(?<=\\s|\"|'|`)!(?=(\\w|-|:|\\*)+)",
			"name": "entity.name.tag.windi"
		},
    "alias": {
			"match": "(?<=\\s|\"|'|`)\\*(\\w|-)+",
			"name": "support.class.windicss"
		},
		"bracket": {
			"match": "\\(|\\)",
			"name": "constant.character.escape.windicss"
		}
  }
}
